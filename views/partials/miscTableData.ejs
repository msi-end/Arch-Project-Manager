<div class="more-data-text flex align-center">
    <h2>
        <%= data.reference_no %>
    </h2>
    <h2>
        <%= data.work_name %>
    </h2>
</div>
<!-- DETAILS  -->
<div class="contents grid">
    <div class="description flex align-center">
        <h3>Client Name:</h3>
        <p class="text">
            <%= data.sdeal_name %>
        </p>
    </div>
    <div class="description flex align-center">
        <h3>Phone Number:</h3>
        <p class="text">+91 <%= data.contact %></p>
    </div>
    <div class="description flex align-center">
        <h3>Email ID:</h3>
        <p class="text"><%= data.email %></p>
    </div>
    <div class="description flex align-center">
        <h3>Address:</h3>
        <p class="text"><%= data.city %></p>
    </div>
    <div class="description flex align-center">
        <h3>Project Amount:</h3>
        <p class="text">&#8377; <span><%= data.agreement_amount %></span></p>
    </div>
    <div class="description flex align-center">
        <h3>Agreement Date:</h3>
        <p class="text"><%= data.mp_deadline ? data.mp_deadline : "N/A" %></p>
    </div>
</div>

<!-- --BOX-- -->
<div class="task-grid grid">
    <%- include('../partials/tasks/subtask.ejs', {subdata: data}) %>
</div>