<div class="accordion-content">
    <div class="ahead grid">
        <p class="ref">
            <span class="uppercase hide block phead">Ref. No.</span>
            <span><%= pdata[0].reference_no %></span>
        </p>
        <p class="cli none"><%= pdata[0].deal_name %></p>
        <p class="pro">
            <span class="uppercase hide block phead">name of work</span>
            <span><%= pdata[0].work_name %></span>
        </p>
        <p class="emp_date">
            <span class="uppercase hide block phead">Deadline</span>
            <span>12/06/26</span>
        </p>
        <p class="stat flex red">Pending</p>
        <p class="arrow-down">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" id="angle-double-down"
                class="svg">
                <path fill="##000000"
                    d="M11.29,11.46a1,1,0,0,0,1.42,0l3-3A1,1,0,1,0,14.29,7L12,9.34,9.71,7A1,1,0,1,0,8.29,8.46Zm3,1.08L12,14.84l-2.29-2.3A1,1,0,0,0,8.29,14l3,3a1,1,0,0,0,1.42,0l3-3a1,1,0,0,0-1.42-1.42Z">
                </path>
            </svg>
        </p>
    </div>
    <!-- ----------open data for accordion---------- -->
    <div class="adata">
        <div class="oth-info grid none">
            <p></p>
            <p class="contact">
                <span class="uppercase phead">contact No</span>
                <span class="contact_no"><%= pdata[0].contact %></span>
            </p>
            <p class="e-mail">
                <span class="uppercase phead">email</span>
                <span class="g-mail"><%= pdata[0].email %></span>
            </p>
            <p class="agreement">
                <span class="uppercase phead">Agreement Amount</span>
                <span class="amount">&#8377; <%= pdata[0].agreement_amount %></span>
            </p>
            <p class="address">
                <span class="uppercase phead">address</span>
                <span class="add_info"><%= pdata[0].city %></span>
            </p>
            <p></p>
        </div>
        <div class="project_expand grid">
            <p class="none"></p>
            <!-- tasks  --> 
            <% const unique = pdata.filter(
                (obj, index, array) =>
                  index === array.findIndex((o) => o.task_name === obj.task_name)
              );

            unique.forEach((el)=>{ %>
                <%- include('./task.ejs', {el} )%> 
            <% }) %>
        </div>

    </div>
</div>