<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>EBAH ERP | Admin</title>

    <!-- CSS -->
    <link rel="stylesheet" href="/css/index.css">
    <link rel="stylesheet" href="/css/responsive.css">
    <link rel="stylesheet" href="../../css/darkMode.css">
    <!-- <link rel="stylesheet" href="/css/admin/main.css"> -->

    <link rel="stylesheet" href="/css/admin/user.css">

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link href="
    https://cdn.jsdelivr.net/npm/sweetalert2@11.10.1/dist/sweetalert2.min.css
    " rel="stylesheet">
</head>

<body>

    <section>
        <%- include('../partials/admin.aside.ejs') %>
            <main data-app-page="user-manager">
                <div class="main-data">
                    <%- include('../partials/admin.header.ejs') %>
                        <!-- --HEADING-- -->
                        <div class="heading">
                            <h2>User Manager</h2>
                            <p class="title">Manage all user profiles here</p>
                        </div>
                        <!-- --SUB-HEADING-- -->
                        <div class="top-section flex align-center j-between">
                            <div class="section-text">
                                <h3 class="flex">All Users</h3>
                            </div>
                            <div class="utility-section flex align-center">
                                <div class="searchBox flex align-center">
                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" id="search"
                                        onclick="SearchFromInput()">
                                        <path fill="##000000"
                                            d="M21.71,20.29,18,16.61A9,9,0,1,0,16.61,18l3.68,3.68a1,1,0,0,0,1.42,0A1,1,0,0,0,21.71,20.29ZM11,18a7,7,0,1,1,7-7A7,7,0,0,1,11,18Z">
                                        </path>
                                    </svg>
                                    <input type="text" id="searchy" oninput="search()"
                                        placeholder="Search for anything...">
                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" id="times" class="close"
                                        onclick="clearInput()">
                                        <path fill="##000000"
                                            d="M13.41,12l4.3-4.29a1,1,0,1,0-1.42-1.42L12,10.59,7.71,6.29A1,1,0,0,0,6.29,7.71L10.59,12l-4.3,4.29a1,1,0,0,0,0,1.42,1,1,0,0,0,1.42,0L12,13.41l4.29,4.3a1,1,0,0,0,1.42,0,1,1,0,0,0,0-1.42Z">
                                        </path>
                                    </svg>
                                </div>
                                <div class="filter">
                                    <div class="filter-button">
                                        <button class="btn-secondary flex align-center">
                                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" id="filter">
                                                <path fill=""
                                                    d="M19,2H5A3,3,0,0,0,2,5V6.17a3,3,0,0,0,.25,1.2l0,.06a2.81,2.81,0,0,0,.59.86L9,14.41V21a1,1,0,0,0,.47.85A1,1,0,0,0,10,22a1,1,0,0,0,.45-.11l4-2A1,1,0,0,0,15,19V14.41l6.12-6.12a2.81,2.81,0,0,0,.59-.86l0-.06A3,3,0,0,0,22,6.17V5A3,3,0,0,0,19,2ZM13.29,13.29A1,1,0,0,0,13,14v4.38l-2,1V14a1,1,0,0,0-.29-.71L5.41,8H18.59ZM20,6H4V5A1,1,0,0,1,5,4H19a1,1,0,0,1,1,1Z">
                                                </path>
                                            </svg>
                                            <span class="text">Filter</span>
                                        </button>
                                    </div>
                                    <div class="filter-list">

                                    </div>
                                </div>
                                <div class="add-button">
                                    <button class="btn-primary flex align-center" type="button" onclick="addUser(this)">
                                        <span class="text">Add User</span>
                                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" id="plus-circle"
                                            class="">
                                            <path fill=""
                                                d="M12,2A10,10,0,1,0,22,12,10,10,0,0,0,12,2Zm0,18a8,8,0,1,1,8-8A8,8,0,0,1,12,20Zm4-9H13V8a1,1,0,0,0-2,0v3H8a1,1,0,0,0,0,2h3v3a1,1,0,0,0,2,0V13h3a1,1,0,0,0,0-2Z">
                                            </path>
                                        </svg>
                                    </button>
                                </div>
                            </div>
                        </div>

                        <!-- ----------- DATA TABLE----------- -->

                        <div class="data-info">
                            <table>
                                <thead>
                                    <tr>
                                        <th>Sl No</th>
                                        <th>User Name</th>
                                        <th>Designation</th>
                                        <th>Phone Number</th>
                                        <th>Email Id</th>
                                        <th>Last Login</th>
                                        <th>Last Logout</th>
                                        <th>Status</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    <% data?.forEach(user=>{ %>
                                        <tr class="user-profile" data-id="<%= user.em_id  %>">
                                            <td>
                                                <%= user.em_id %>
                                            </td>
                                            <td>
                                                <%= user.name %>
                                            </td>
                                            <td>
                                                <%= user.job_role %>
                                            </td>
                                            <td>
                                                +91 <%= user.number=='' ?'N/A':user.number %>
                                            </td>
                                            <td>
                                                <%= user.email %>
                                            </td>
                                            <td class="date">
                                                <%= user.lastLoginAt %>
                                            </td>
                                            <td class="date">
                                                <%= user.lastLogoutAt %>
                                            </td>
                                            <td class=""><button
                                                    class="<%= user.status ? 'status success' : 'status warning' %>">
                                                    <%= user.status ? "active" : "inactive" %>
                                                </button></td>
                                            <td>
                                                <span class="icon">
                                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"
                                                        id="angle-double-right">
                                                        <path fill=""
                                                            d="M8.46,8.29A1,1,0,1,0,7,9.71L9.34,12,7,14.29a1,1,0,0,0,0,1.42,1,1,0,0,0,1.42,0l3-3a1,1,0,0,0,0-1.42Zm8.5,3-3-3a1,1,0,0,0-1.42,1.42L14.84,12l-2.3,2.29a1,1,0,0,0,0,1.42,1,1,0,0,0,1.42,0l3-3A1,1,0,0,0,17,11.29Z">
                                                        </path>
                                                    </svg>
                                                </span>
                                            </td>
                                        </tr>
                                        <% }) %>
                                </tbody>

                                <tfoot>
                                    <tr>
                                        <td colspan="6"></td>
                                        <td colspan="3"></td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                </div>
                <!-- --MORE-DATA-- -->
                <div class="more-data hide">
                    <% data?.forEach(user=>{ %>
                        <%- include('../partials/userData.ejs', {user}) %>
                            <% }) %>
                </div>

                <!-- POPUPS  -->

                <div class="main-popup hide"></div>
                <%- include('../partials/tasks/notification.ejs') %>
                <%- include('../partials/tasks/alert.ejs') %>
            </main>
    </section>


    <!-- JAVASCRIPT -->
    <script src="../../js/admin/index.js"></script>
    <script src="/js/admin/common.js"></script>
    <script src="/js/admin/user.js"></script>

</body>

</html>
