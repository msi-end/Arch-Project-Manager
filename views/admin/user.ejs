<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>EBAH ERP | Admin</title>

    <!-- CSS -->
    <link rel="stylesheet" href="/css/admin/main.css">
    <link rel="stylesheet" href="/css/admin/responsive.css">
    <link rel="stylesheet" href="/css/admin/header.css">

    <link rel="stylesheet" href="/css/admin/user.css">

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link href="
    https://cdn.jsdelivr.net/npm/sweetalert2@11.10.1/dist/sweetalert2.min.css
    " rel="stylesheet">
</head>

<body>

    <%- include('../partials/admin.header.ejs') %>
        <!-- MAIN SECTION STARTS HERE  -->
        <main class="main">
            <div class="ucontainer">
                <div class="userContainer uform">
                    <h4 class="uppercase">user</h4>
                    <button class="uppercase" onclick="Opn_UserCtn('.usform')" id="userbtn">
                        <span>Add user</span>
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" id="plus-circle">
                            <path fill="##000000"
                                d="M12,2A10,10,0,1,0,22,12,10,10,0,0,0,12,2Zm0,18a8,8,0,1,1,8-8A8,8,0,0,1,12,20Zm4-9H13V8a1,1,0,0,0-2,0v3H8a1,1,0,0,0,0,2h3v3a1,1,0,0,0,2,0V13h3a1,1,0,0,0,0-2Z">
                            </path>
                        </svg>
                    </button>
                </div>

                <!-- -------------------User form--------------------------- -->
                <div class="usform hide">
                    <div class="userform">
                        <form action="">
                            <h4 class="uppercase">User details</h4>
                            <div class="ugrid">
                                <div class="field">
                                    <label for="name">Name</label>
                                    <input type="text" name="name" id="name" placeholder="Name">
                                </div>
                                <div class="field">
                                    <label for="cnumber">Phone Number</label>
                                    <input type="text" name="cnumber" id="cnumber" placeholder="Number">
                                </div>
                                <div class="field">
                                    <label for="email">Email</label>
                                    <input type="text" name="email" id="email" placeholder="Email">
                                </div>
                                <div class="field">
                                    <label for="email">Designation</label>
                                    <input type="text" name="designation" id="designation" placeholder="Designation">
                                </div>
                                <div class="field">
                                    <label for="email">Password</label>
                                    <input type="text" name="password" id="password" placeholder="Password">
                                </div>
                            </div>
                            <!-- ------button---- -->
                        </form>
                            <div class="user-btns">
                                <button class="uppercase" onclick="addUser()" >submit</button>
                                <button class="uppercase" onclick="Cls_UserCtn('.usform')">cancel</button>
                            </div>

                    </div>
                </div>

                <!-- ----------------users------------------------------- -->
                <div class="userbox">
                    <div class="userheader">
                        <h4 class="uppercase">profiles</h4>
                        <div class="usersearch">
                            <input type="text" name="usearch" id="usearch" placeholder="Search">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" id="search" class="svg">
                                <path fill="##000000"
                                    d="M21.71,20.29,18,16.61A9,9,0,1,0,16.61,18l3.68,3.68a1,1,0,0,0,1.42,0A1,1,0,0,0,21.71,20.29ZM11,18a7,7,0,1,1,7-7A7,7,0,0,1,11,18Z">
                                </path>
                            </svg>
                        </div>
                    </div>

                    <hr>
                    <!-- --------------User 1--------------------------  -->
                    <% data.forEach(user=>{ %>
                    <div class="user-list flex" data-id="<%= user.em_id  %>">
                        <div class="user-profile flex">
                            <div class="user-img flex">
                                <img src="/img/employee.jpg" alt="profile" class="green">
                            </div>
                            <div class="user-details">
                                <p class="username"><%= user.name %></p>
                                <p class="userdesignation"><%= user.job_role  %></p>
                            </div>
                        </div>
                        <!-- -------------------  -->
                        <div class="user-contact-info">
                            <div class="user-phone">
                                <p class="usphone">Phone</p>
                                <p class="uphone"><%= user.number==''?'N/A':user.number %></p>
                            </div>
                            <div class="user-email">
                                <p class="usemail">Email</p>
                                <p class="uemail"><%= user.email  %></p>
                            </div>
                        </div>
                        <!-- ----------------------------------  -->
                        <div class="user-attendance">
                            <p>Attendance</p>
                            <p>96%</p>
                        </div>
                        <!-- ---------------------------------  -->
                        <div class="data-status">
                            <p class="log">Last Login</p>
                            <p class="data-log"><%= user.lastLoginAt  %></p>
                            <p class="log">Last Logout</p>
                            <p class="data-log"><%= user.lastLogoutAt  %></p>
                        </div>
                        <!-- ---------------------------------  -->
                        <div class="user-status">
                            <p class="urstatus">Status</p>
                            <!-- <p class="ustatus red"><span>Online</span></p> -->
                            <p class="ustatus green"><span><%= user.status %></span></p>
                        </div>
                        <div class="user-edit" onclick="Opn_UserCtn('.uprofile-settings',this)">
                            <a class="uicon"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" id="pen">
                                <path fill="##000000"
                                    d="M22,7.24a1,1,0,0,0-.29-.71L17.47,2.29A1,1,0,0,0,16.76,2a1,1,0,0,0-.71.29L13.22,5.12h0L2.29,16.05a1,1,0,0,0-.29.71V21a1,1,0,0,0,1,1H7.24A1,1,0,0,0,8,21.71L18.87,10.78h0L21.71,8a1.19,1.19,0,0,0,.22-.33,1,1,0,0,0,0-.24.7.7,0,0,0,0-.14ZM6.83,20H4V17.17l9.93-9.93,2.83,2.83ZM18.17,8.66,15.34,5.83l1.42-1.41,2.82,2.82Z">
                                </path>
                            </svg></a>
                            <span class="edit">Edit</span>
                        </div>
                    </div>
                    <hr>
           <%     }) %>

                    <!-- ----------------------------------------------  -->


                    <div class="user-pagination">
                        <div class="pages">
                            <ul>
                                <li>
                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" id="angle-double-left"
                                        class="svg">
                                        <path fill="##000000"
                                            d="M11.46,8.29a1,1,0,0,0-1.42,0l-3,3a1,1,0,0,0,0,1.42l3,3a1,1,0,0,0,1.42,0,1,1,0,0,0,0-1.42L9.16,12l2.3-2.29A1,1,0,0,0,11.46,8.29ZM14.66,12,17,9.71a1,1,0,0,0-1.42-1.42l-3,3a1,1,0,0,0,0,1.42l3,3a1,1,0,0,0,1.42,0,1,1,0,0,0,0-1.42Z">
                                        </path>
                                    </svg>
                                </li>
                                <li>1</li>
                                <li>2</li>
                                <li>3</li>
                                <li>...</li>
                                <li>10</li>
                                <li>
                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" id="angle-double-right"
                                        class="svg">
                                        <path fill="##000000"
                                            d="M8.46,8.29A1,1,0,1,0,7,9.71L9.34,12,7,14.29a1,1,0,0,0,0,1.42,1,1,0,0,0,1.42,0l3-3a1,1,0,0,0,0-1.42Zm8.5,3-3-3a1,1,0,0,0-1.42,1.42L14.84,12l-2.3,2.29a1,1,0,0,0,0,1.42,1,1,0,0,0,1.42,0l3-3A1,1,0,0,0,17,11.29Z">
                                        </path>
                                    </svg>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>

                <!-- -----------user-profile----------------- -->
                <div class="uprofile-settings hide">
                    <div class="user-profile-settings">
                        <div class="userheader">
                            <h4 class="uppercase">user profile</h4>
                            <button class="update" onclick="Cls_UserCtn('.uprofile-settings')">Close</button>
                        </div>
                        <hr>
                        <div class="flex-box" data-id="">
                            <div class="profile-details">
                                <div class="profile-img">
                                    <img src="/img/employee.jpg" alt="profile">
                                    <button onclick="Disable_BtnHandler('.profile-grid',true)" >Edit</button>
                                </div>
                                <div class="profile-grid">
                                    <div class="field">
                                        <label for="name">Name</label>
                                        <input type="text" name="name" id="name" disabled placeholder="Name">
                                    </div>
                                    <div class="field">
                                        <label for="cnumber">Phone Number</label>
                                        <input type="text" name="cnumber" id="cnumber" disabled placeholder="Number">
                                    </div>
                                    <div class="field">
                                        <label for="email">Email</label>
                                        <input type="text" name="email" id="email" disabled placeholder="Email">
                                    </div>
                                    <div class="field">
                                        <label for="email">Designation</label>
                                        <input type="text" name="designation" disabled id="designation"
                                            placeholder="Designation">
                                    </div>
                                    <button type="button" style="background: var(--primary-color);color: white;" class="hide" onclick="updUser()"> Update Info.</button>
                                </div>
                                <div class="profile-status flex">
                                    <p class="urstatus">Status</p>
                                    <p class="ustatus red"><span>Offline</span></p>
                                </div>
                                <div class="profile-log-out flex">
                                    <p class="pro-logout">Last Login</p>
                                    <p class="pro-logout-status">2023-12-23 15:57:51</p>
                                </div>
                                <div class="profile-log-in flex">
                                    <p class="pro-login">Last Logout</p>
                                    <p class="pro-login-status">2023-12-23 15:57:51</p>
                                </div>
                            </div>
                            <div class="profile-project-details">
                                <div class="profile-main">
                                    <div class="profile-main-project">
                                        <p class="primary">100</p>
                                        <p>
                                            <span>Completed </span>
                                            <span>Projects</span>
                                        </p>
                                    </div>
                                    <div class="profile-main-project">
                                        <p class="blue">100</p>
                                        <p>
                                            <span>Pending</span>
                                            <span>Projects</span>
                                        </p>
                                    </div>
                                    <div class="profile-main-project">
                                        <p class="red">100</p>
                                        <p>
                                            <span>In Progress</span>
                                            <span>Projects</span>

                                        </p>
                                    </div>
                                </div>
                                <div class="profile-project-menu">
                                    <p class="uppercase">Assigned Projects</p>
                                    <hr class="line">
                                    <div class="project-column">
                                        <p class="project-name">
                                            <span>Architecture and Multinational Expulsion in Marketing &
                                                Development</span>
                                            <span class="green">Active</span>
                                        </p>
                                        <hr>
                                        <p class="project-name">
                                            <span>Architecture and Multinational Expulsion in Marketing &
                                                Development</span>
                                            <span class="red">Active</span>
                                        </p>
                                        <hr>
                                        <p class="project-name">
                                            <span>Architecture and Multinational Expulsion in Marketing &
                                                Development</span>
                                            <span>Active</span>
                                        </p>
                                        <hr>
                                        <p class="project-name">
                                            <span>Architecture and Multinational Expulsion in Marketing &
                                                Development</span>
                                            <span>Active</span>
                                        </p>
                                        <hr>
                                        <p class="project-name">
                                            <span>Architecture and Multinational Expulsion in Marketing &
                                                Development</span>
                                            <span>Active</span>
                                        </p>
                                        <hr>
                                        <p class="project-name">
                                            <span>Architecture and Multinational Expulsion in Marketing &
                                                Development</span>
                                            <span>Active</span>
                                        </p>
                                        <hr>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </section>


    <!-- JAVASCRIPT -->
    <script src="/js/admin/main.js"></script>
    <script src="/js/admin/user.js"></script>
    <script src="../../js/admin/header.js"></script>
 
</body>

</html>